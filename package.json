{
  "name": "elektro-scrooge",
  "version": "1.1.0",
  "description": "Telegram bot for electricity spot price",
  "main": "index.js",
  "devDependencies": {
    "@pulumi/aws": "^7.12.0",
    "@pulumi/pulumi": "^3.208.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
